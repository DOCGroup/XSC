//$Id$

project (xsc) : boost_system, xsc_utils, xsc_be, xerces3 {
  exename   = xsc
  install   = $(XSC_ROOT)/bin

  requires += exceptions

  after    += libXSC libCXX libIDL
  includes += .

  specific (vc6, vc7, vc71, vc8, vc9, vc10, nmake) {
   libs += CXXs IDLs
  } else {
   libs += CXX IDL
  }

  Source_Files {
    xsc.cpp
  }
}
