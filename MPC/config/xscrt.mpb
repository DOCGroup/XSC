// $Id$

project : xerces3, xsc_utils, xsc_be {
  requires += xscrt

  includes += $(XSC_ROOT) $(XSC_ROOT)/XSCRT
  libpaths += $(XSC_ROOT)/lib

  dynamicflags += XSCRT_HAS_DLL
  staticflags  += XSCRT_AS_STATIC_LIBS

  libs += XSCRT

  specific (vc7, vc71, vc8, vc9, vc10, nmake) {
    compile_flags += /wd4800

    //Debug::ignore_default_library_names += LIBCMTD
    //Release::ignore_default_library_names += LIBCMT

    libs += XSC_BEs
  } else {
    libs += XSC_BE
  }
}
