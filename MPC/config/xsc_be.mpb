// $Id$

project : boost_filesystem, boost_regex, boost_program_options, utility, xsc_static, xsc_common {
  after += XSC_BE

  specific (prop:microsoft) {
    libs += XSC_BEs
  } else {
    libs += XSC_BE
  }
}

feature (externals) {
  includes += $(XSC_ROOT)/contrib \
              $(XSC_ROOT)/contrib/utility
}

feature (!externals) {
  includes += $(CCF_ROOT) \
              $(UTILITY_ROOT)
}
