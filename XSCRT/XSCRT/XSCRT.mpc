// $Id$

project (XSCRT) : xerces, xsc_common {
  sharedname = XSCRT
  after     += libXSC

  includes  += $(XSC_ROOT) $(XSC_ROOT)/XSCRT

  specific (vc6, vc7, vc71, vc8, vc9, nmake) {
    libs += XSCs
  } else {
    libs += XSC
  }

  dynamicflags += XSCRT_HAS_DLL XSCRT_BUILD_DLL
  staticflags  += XSCRT_AS_STATIC_LIBS

  Source_Files {
    utils/Console_Error_Handler.cpp
  }

  Template_Files {
    ./*.tpp
    ../XMLSchema/*.tpp

    utils/Buffer_Reader_T.cpp
    utils/Buffer_Writer_T.cpp
    utils/File_T.cpp
    utils/File_Reader_T.cpp
    utils/File_Writer_T.cpp
    utils/Reader_T.cpp
    utils/Writer_T.cpp
    utils/Reader_Writer_Base_T.cpp
    utils/XML_Schema_Resolver_T.cpp
  }

  Inline_Files {

  }

  Header_Files {
    XSCRT_export.h
  }
}
