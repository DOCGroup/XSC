// $Id$

project (XSCRT) : xerces, xsc_common {
  sharedname = XSCRT
  after     += libXSC

  includes  += $(XSC_ROOT) $(XSC_ROOT)/XSCRT
  libs      += XSCs
  
  dynamicflags += XSCRT_HAS_DLL XSCRT_BUILD_DLL
  staticflags  += XSCRT_AS_STATIC_LIBS

  Source_Files {
    utils/File.cpp
  }

  Template_Files {
    utils/File_T.cpp
    utils/XML_Schema_Resolver_T.cpp
  }

  Header_Files {
    XSCRT_export.h
  }
}
